extends ../layout

block content
    h2.mt-3 Order Management
    div.container.mt-5.col-8
        h3.mt-5 Create
        form#createOrderForm
            div.row
                div.form-group.col-9
                    input.form-control(type='text' name='userId' placeholder='Enter user id')
                div.form-group.col-9
                    input.form-control(type='text' name='itemId' placeholder='Enter item id')
                div.form-group.col-9
                    input.form-control(type='number' name='quantity' placeholder='Enter quantity')
                div.form-group.col-9
                    input.form-control(type='number' name='price' placeholder='Enter price')
                div.form-group.col-9
                    input.form-control(type='text' name='address' placeholder='Enter address')
                div.form-group.col-3
                    input.form-control(type='submit' value='Submit')